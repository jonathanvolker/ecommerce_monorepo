# Server
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/sexshop-ecommerce

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-token-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS
FRONTEND_URL=http://localhost:5173

# Email / SMTP
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
MAIL_FROM="Tienda <no-reply@example.com>"
APP_URL=http://localhost:5173
ADMIN_EMAILS=admin@example.com
RESET_TOKEN_EXP_MIN=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
